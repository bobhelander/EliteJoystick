<log4net>
  <root>
    <level value="ALL" />
    <appender-ref ref="console" />
    <!--<appender-ref ref="file" />-->
  </root>
  <logger name="InGame">
    <level value="ALL" />
    <appender-ref ref="InGameAppender" />
  </logger>
  <appender name="console" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %level %logger - %message%newline" />
    </layout>
  </appender>
  <appender name="file" type="log4net.Appender.RollingFileAppender">
    <file value="EliteJoystickConsole.log" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="5" />
    <maximumFileSize value="10MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
    </layout>
  </appender>
  <appender name="InGameAppender" type="log4net.Appender.FileAppender">
    <file type="log4net.Util.PatternString" value="%env{LOCALAPPDATA}\\EliteJoystick\\log\\InGame.log" />
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%message%newline" />
    </layout>
  </appender>
</log4net>